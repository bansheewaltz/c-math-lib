#include "s21_tests.h"

#suite abs
#test arb_pos
    int x = 17;

    int exp = abs(x);
    int res = s21_abs(x);

    ck_assert_int_eq(exp, res);


#test arb_neg
    int x = -17;

    int exp = abs(x);
    int res = s21_abs(x);

    ck_assert_int_eq(exp, res);


#test zero
    int x = 0;

    int exp = abs(x);
    int res = s21_abs(x);

    ck_assert_int_eq(exp, res);


#test int_max_pos
    int x = INT_MAX; 
    
    int exp = abs(x);
    int res = s21_abs(x);

    ck_assert_int_eq(exp, res);


#test int_max_neg
    int x = -INT_MAX; 
    
    int exp = abs(x);
    int res = s21_abs(x);

    ck_assert_int_eq(exp, res);


#test int_min_pos
    int x = INT_MIN; 
    
    int exp = abs(x);
    int res = s21_abs(x);

    ck_assert_int_eq(exp, res);


#test int_min_neg_minus_one
    int x = -1 - INT_MIN;
    
    int exp = abs(x);
    int res = s21_abs(x);

    ck_assert_int_eq(exp, res);
