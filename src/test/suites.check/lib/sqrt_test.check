#include "s21_tests.h"
#include <stdio.h>
#include <math.h>

#suite sqrt
#test arb_pos
    double x = 15.0/13.0;
    
    double exp = sqrt(x);
    double res = (double)s21_sqrt(x);
    
    ck_assert_double_eq_tol(exp, res, S21_TOLERANCE);
    

#test arb_neg
    double x = -15.0/13.0;
    
    double exp = sqrt(x);
    double res = (double)s21_sqrt(x);
    
    ck_assert_ldouble_nan(exp);
    ck_assert_ldouble_nan(res);


