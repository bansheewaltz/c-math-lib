/* the margin of error is too large
##test dbl_max
    double x = DBL_MAX;
    
    double exp = sqrt(x);
    double res = (double)s21_sqrt(x);
    
    ck_assert_double_eq_tol(exp, res, 1e0);
*/


#test-loop(0, 17) zero__to__one
    double x = 0.0 + _i * (1.0 / 17.0);
    
    double exp = sqrt(x);
    double res = (double)s21_sqrt(x);
    
    if (x < 0) {
        ck_assert_ldouble_nan(exp);
        ck_assert_ldouble_nan(res);
    } else {
        ck_assert_double_eq_tol(exp, res, 1e0);
    }
