#include "s21_tests.h"

#suite cos
#test arb_pos
    double x = 15.0/13.0;
    
    double exp = cos(x);
    double res = (double)s21_cos(x);
    
    ck_assert_double_eq_tol(exp, res, S21_TOLERANCE);
    

#test arb_neg
    double x = -15.0/13.0;
    
    double exp = cos(x);
