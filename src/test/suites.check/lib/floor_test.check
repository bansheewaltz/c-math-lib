#include <stdio.h>
#include <stdint.h>

#include "s21_tests.h"

#suite floor
#test double_arb_pos
    double x = 15.0 / 13.0;
    
    double exp = floor(x);
    double res = s21_floor(x);
    
    ck_assert_double_eq(exp, res);


#test double_arb_neg
    double x = -15.0 / 13.0;
    
    double exp = floor(x);
    double res = s21_floor(x);
    
    ck_assert_double_eq(exp, res);


