#include "s21_tests.h"

#suite ceil
#test double_arb_pos
    double x = 15.0 / 13.0;
    
    double exp = ceil(x);
    double res = (double)s21_ceil(x);
    
    ck_assert_double_eq(exp, res);


#test double_arb_neg
    double x = -15.0 / 13.0;
    
    double exp = ceil(x);
    double res = (double)s21_ceil(x);
    
    ck_assert_double_eq(exp, res);


