#include "s21_tests.h"
#include <stdio.h>

#suite trunc
#test arbitrary_positive
    double x = 15.0/13.0;
    
    double exp = trunc(x);
    double res = (double)s21_trunc(x);
    
    ck_assert_ldouble_eq(exp, res);


#test arbitrary_negative
    double x = -15.0/13.0;
    
    double exp = trunc(x);
    double res = (double)s21_trunc(x);
    
    ck_assert_ldouble_eq(exp, res);


#test zero
    double x = 0.0;
    
    double exp = trunc(x);
    double res = (double)s21_trunc(x);
    
    ck_assert_ldouble_eq(exp, res);


#test max_ldbl
    double x = DBL_MAX;
    
    double exp = trunc(x);
    double res = (double)s21_trunc(x);
    
    ck_assert_ldouble_eq(exp, res);


#test min_ldbl
    double x = DBL_MIN;
    
    double exp = trunc(x);
    double res = (double)s21_trunc(x);
    
    ck_assert_ldouble_eq(exp, res);
