#include "s21_tests.h"

#suite isfp
#test arbitrary_true
    double x = -17.;

    int exp = true;
    int res = s21_isfp(x);

    ck_assert_int_eq(exp, res);


#test arbitrary_false
    double x = -17.5;

    int exp = false;
    int res = s21_isfp(x);

    ck_assert_int_eq(exp, res);


#test zero
    double x = 0.;

    int exp = true;
    int res = s21_isfp(x);
    ck_assert_int_eq(exp, res);


#test-loop(0, 100) iteration
    double x = (double)_i;
    
    int exp = true;
    int res = s21_isfp(x);
    ck_assert_int_eq(exp, res);
