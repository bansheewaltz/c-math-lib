#include "s21_tests.h"

#suite abs
#test arbitrary
    int x = -17;

    int exp = abs(x);
    int res = s21_abs(x);
    ck_assert_int_eq(exp, res);


#test zero
    int x = 0;

    int exp = abs(x);
    int res = s21_abs(x);
    ck_assert_int_eq(exp, res);


#test max_int
    int x = INT_MAX - 1; 
    
    int exp = abs(x);
    int res = s21_abs(x);
    ck_assert_int_eq(exp, res);


#test positive_value
    int x = 17;

    int exp = abs(x);
    int res = s21_abs(x);
    ck_assert_int_eq(exp, res);



#test-loop(0, 96) iteration
    int step = INT_MAX / 100 * 2;
    int x = INT_MIN + _i * step;
    
    int exp = abs(x);
    int res = s21_abs(x);
    ck_assert_int_eq(exp, res);
