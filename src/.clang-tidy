Checks: >
  clang-analyzer-*,
  performance-*,
  portability-*,
  readability-*,
  cppcoreguidelines-*,
  google-readability*
WarningsAsErrors: true
HeaderFilterRegex: >
  "(include/).*\\.h$",
  "(lib/headers/).*\\.h$", 
  "(tests/headers).*\\.h$"
CheckOptions:
  - key: readability-identifier-length.IgnoredParameterNames
    value: ^[xyi]$
